<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view style="font-weight:bolder;color:black;" class="weui-label">账户</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="accountName" bindinput="accountNameBindinput" class="weui-input" placeholder="请输入账户" />
                </view>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view style="font-weight:bolder;color:black;" class="weui-label">用户名</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="username" bindinput="usernameBindinput" class="weui-input" placeholder="请输入用户名" />
                </view>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view style="font-weight:bolder;color:black;" class="weui-label">口令</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="token" bindinput="tokenBindinput" class="weui-input" placeholder="口令只能为数字、字母、符号" />
                </view>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view style="font-weight:bolder;color:black;" class="weui-label">提示</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="tip" bindinput="tipBindinput" class="weui-input" placeholder="请输入提示" />
                </view>
            </view>
        </view>
        <view class="button-sp-area">
            <button bindtap="add" class="weui-btn" type="primary" plain="true">确认</button>
        </view>
    </view>
</view>